# AI 角色扮演应用 - 环境变量配置示例
# 复制此文件为 .env 并填入实际的值

# ==================== Python 服务配置 ====================

# OpenAI API Key
OPENAI_API_KEY=sk-your-api-key-here

# 智谱 AI API Key
ZHIPU_API_KEY=your-zhipu-api-key-here

# 硅基流动 API Key
SILICONFLOW_API_KEY=sk-your-siliconflow-key-here

# LLM 提供商选择 (openai / zhipu / siliconflow)
LLM_PROVIDER=openai

# ==================== Go 服务配置 ====================

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=roleplay
DB_USER=root
DB_PASSWORD=your-db-password

# Go 服务配置
GO_HOST=0.0.0.0
GO_PORT=8080
GO_TIMEOUT=30000

# gRPC 服务配置
GRPC_HOST=localhost
GRPC_PORT=50051
GRPC_TIMEOUT=30000

# ==================== Web 前端配置 ====================

# API 服务地址
VITE_API_URL=http://localhost:8080

# 开发服务器端口
VITE_PORT=5173

# ==================== Android APP 配置 ====================

# APP 后端服务地址
APP_API_URL=http://your-server-ip:8080

# APP 名称
APP_NAME=AI角色扮演

# ==================== 日志配置 ====================

# 日志级别 (DEBUG / INFO / WARNING / ERROR)
LOG_LEVEL=INFO

# 日志输出路径
LOG_PATH=./logs

# ==================== 其他配置 ====================

# 应用环境 (development / production)
NODE_ENV=development

# 调试模式
DEBUG=false
